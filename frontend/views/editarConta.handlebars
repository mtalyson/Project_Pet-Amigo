<link rel="stylesheet" href="/css/style-conta.css">

<div class="container-fluid">
    <div class="col-sm-10">
        <h2 class="titulo-cadastro">Informações sobre a Conta</h2>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <!--left col-->

        {{#usuarios}}
            
        <!--/col-3-->
        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a data-toggle="tab" class="nav-link active" href="#home">Perfil</a>
                </li>
                <li class="nav-item">
                    <a data-toggle="tab" class="nav-link" href="#endereco">Endereço</a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active" id="home">

                    <form method="POST" action="/conta/atualizaconta" id="formUpdate" enctype="multipart/form-data" name="formUpdate">
                        
                        <div class="form-group">

                        </div>
                        
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name">
                                    <h4>Nome</h4>
                                </label>
                                <input type="text" class="form-control" name="nomeUsuario" id="nomeUsuario" value="{{usuarios.nomeUsuario}}">
                            </div>
                        </div>
                        
                        <input name="id" id="id" type="text" value="{{usuarios.id}}"  style="display:none;" class="form-control">

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="email">
                                    <h4>Email</h4>
                                </label>
                                <input type="email" class="form-control" name="email" id="email" value="{{usuarios.email}}">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email">
                                    <h4>Digite uma Senha</h4>
                                </label>
                                <input type="password" class="form-control" name="password">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email">
                                    <h4>Confirme a Senha</h4>
                                </label>
                                <input type="password" class="form-control" name="password1">
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><span class="icon-save"></span>
                                    Salvar</button>
                                <button class="btn btn-lg btn-secondary" type="reset"><span class="icon-refresh"></span>
                                    Resetar</button>
                            </div>
                        </div>
                    

                         </div>

                        <div class="tab-pane" id="endereco">
                      
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="last_name">
                                        <h4 class="margem-texto">Logradouro</h4>
                                    </label>
                                    <input type="text" class="form-control" value="{{logradouro}}" name="logradouro" id="logradouro"
                                        placeholder="Avenida, Rua" title="Digite seu Logradouro.">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label for="inputAddress2">
                                        <h5>Casa</h5>
                                    </label>
                                    <input type="text" class="form-control" value="{{casa}}" id="inputAddress2" name="casa" placeholder="Numero"
                                        maxlength="2">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputAddress2">
                                        <h5>Quadra</h5>
                                    </label>
                                    <input type="text" class="form-control" value="{{quadra}}" id="inputAddress2" name="quadra" placeholder="Ex. Quadra">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputAddress2">
                                        <h5>Bairro </h5>
                                    </label>
                                    <input type="text" class="form-control" id="inputAddress2" value="{{bairro}}" name="bairro" placeholder="Ex. Bairro">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-5">
                                    <label for="inputCity">Cidade</label>
                                    <input type="text" class="form-control" value="{{cidade}}" id="inputCity" name="cidade" placeholder="Ex. Cidade">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputState">Estado</label>
                                    <select id="inputState" name="estado" class="form-control"> 
                                        <option selected="" value="{{estado}}">{{estado}}</option>
                                        <option value="Acre">Acre</option>
                                        <option value="Alagoas">Alagoas</option>
                                        <option value="Amapá">Amapá</option>
                                        <option value="Amazonas">Amazonas</option>
                                        <option value="Bahia">Bahia</option>
                                        <option value="Ceará">Ceará</option>
                                        <option value="Distrito Federal">Distrito Federal</option>
                                        <option value="Espírito Santo">Espírito Santo</option>
                                        <option value="Goiás">Goiás</option>
                                        <option value="Maranhão">Maranhão</option>
                                        <option value="Mato Grosso">Mato Grosso</option>
                                        <option value="Mato Grosso do Sul">Mato Grosso do Sul</option>
                                        <option value="Minas Gerais">Minas Gerais</option>
                                        <option value="Pará">Pará</option>
                                        <option value="Paraíba">Paraíba</option>
                                        <option value="Paraná">Paraná</option>
                                        <option value="Pernambuco">Pernambuco</option>
                                        <option value="Piauí">Piauí</option>
                                        <option value="Rio de Janeiro">Rio de Janeiro</option>
                                        <option value="Rio Grande do Sul">Rio Grande do Sul</option>
                                        <option value="Rio Grande do Norte">Rio Grande do Norte</option>
                                        <option value="Rondônia">Rondônia</option>
                                        <option value="Roraima">Roraima</option>
                                        <option value="Santa Catarina">Santa Catarina</option>
                                        <option value="São Paulo">São Paulo</option>
                                        <option value="Sergipe">Sergipe</option>
                                        <option value="Tocantins">Tocantins</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputZip">CEP</label>
                                    <input type="text" class="form-control" id="inputZip" value="{{cep}}" name="cep" placeholder="Ex. XX.XXX-XXX"
                                        maxlength="10">
                                </div>
                            </div>
                            {{/usuarios}}
                            <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><span class="icon-save"></span>
                                    Salvar</button>
                                <button class="btn btn-lg btn-secondary" type="reset"><span class="icon-refresh"></span>
                                    Resetar</button>
                            </div>
                        </div>
                        </form>

                    </div>
                <!--/tab-pane-->
            </div>
        </div>
    </div>

    <footer>
        <nav class="cor-navbar navbar navbar-expand-lg justify-content-center fixed-bottom">
            <a class="navbar-text" id="titulo-brand">© 2021 Copyright: Pet+Amigo</a>
        </nav>
    </footer>
</div>