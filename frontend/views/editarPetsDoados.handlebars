<link rel="stylesheet" href="/css/style-doacao.css">

<!-- Formulário de Adoção -->
<div class="container-fluid">

    <h2 class="titulo-cadastro">Atualizar informações do Pet</h2>

    <form method="POST" action="/doacao/atualizapet" id="formUpdate" name="formUpdate" enctype="multipart/form-data">
    {{#pet}}
        <div class="form-group col-md-5">
            <label for="NomePet">Nome do Pet</label>
            <input name="nomePet" type="text" value="{{nomePet}}" class="form-control" id="NomePet" required autofocus>
        </div>

        <input name="id" id="id" type="text" value="{{id}}"  style="display:none;" class="form-control">

        <div class="form-group col-md-5">
            <label for="RacaPet">Raça</label>
            <input name="raca" type="text" value="{{raca}}" class="form-control" id="RacaPet" required>
        </div>

        <div class="form-group col-md-5">
            <label for="CorPet">Cor</label>
            <input name="cor" type="text" value="{{cor}}" class="form-control" id="CorPet" required>
        </div>

        <div class="row">
            <div class="form-group col-md-3">
                <label for="IdadePet">Idade</label>
                <input name="idade" type="text" value="{{idade}}" class="form-control" id="IdadePet" required>
            </div>
            <div class="form-group col-md-2">
                <label for="SexoPet">Sexo</label>
                <select name="sexo" id="SexoPet" class="form-control">
                    <option selected value="{{sexo}}">{{sexo}}</option>
                    <option value="Macho">Macho</option>
                    <option value="Fêmea">Fêmea</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-3">
                <label for="TamanhoPet">Tamanho</label>
                <select name="tamanho" id="TamanhoPet" value="{{tamanho}}" class="form-control">
                    <option selected value="{{tamanho}}">{{tamanho}}</option>
                    <option value="Grande">Grande</option>
                    <option value="Médio">Médio</option>
                    <option value="Pequeno">Pequeno</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="PesoPet">Peso</label>
                <input name="peso" type="text" value="{{peso}}" class="form-control" id="PesoPet">
            </div>
        </div>

        <div class="form-group col-md-5">
            <label for="CampoObservacao">Observações</label>
            <textarea name="observacoes" class="form-control" id="CampoObservacao" rows="5">{{observacoes}}</textarea>
        </div>

        <div class="form-group col-md-5">
            <p class="legend-radio">O animal está Vacinado?</p>
            <label><input type="radio" name="opcaoVacinado" value="Sim" class="radio-pointer"> Sim</label>
            <label><input type="radio" name="opcaoVacinado" value="Não" class="radio-pointer-nao" checked> Não</label>
        </div>

        <div class="form-group col-md-5">
            <p class="legend-radio">O animal é Castrado?</p>
            <label><input type="radio" name="opcaoCastrado" value="Sim" class="radio-pointer"> Sim</label>
            <label><input type="radio" name="opcaoCastrado" value="Não" class="radio-pointer-nao" checked> Não</label>
        </div>

        <div class="form-group col-md-5">
            <p>Selecione uma Foto do Pet para Enviar:</p>
            <input name="fotoPet" value="{{fotoPet}}" type="file" />
        </div>

        <div class="form-group col-md-5">
            <button type="submit" class="btn btn-success btn-doacao">Atualizar  </button>
        </div>
    {{/pet}}
    </form>

</div>