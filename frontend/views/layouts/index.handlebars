            <!-- Programador 2 -->
            <div class="col-md-6 col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="200">
              <div class="teacher text-center">
                <img src="./images-index/person_2.jpeg" alt="Image" class="img-fluid w-50 rounded-circle mx-auto mb-4">
                <div class="py-2">
                  <h3 class="text-black">Luís André</h3>
                  <p class="position">Programador</p>
                  <p>Possui 22 anos e atualmente estuda no Instituto Federal do Maranhão.</p>
                </div>
              </div>
            </div>

            <!-- Programador 3 -->
            <div class="col-md-6 col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="300">
              <div class="teacher text-center">
                <img src="./images-index/person_3.png" alt="Image" class="img-fluid w-50 rounded-circle mx-auto mb-4">
                <div class="py-2">
